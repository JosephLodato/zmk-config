/* boards/shields/apogee/apogee.overlay */

#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
    };
};

/* I2C bus (nice!nano v2 defaults: SDA=P0.06, SCL=P0.08) */
&i2c0 {
    status = "okay";

    mcp23017: mcp23017@20 {
        /* IMPORTANT: use the generic mcp230xx binding for this Zephyr version */
        compatible = "microchip,mcp230xx";
        reg = <0x20>;

        gpio-controller;
        #gpio-cells = <2>;
        ngpios = <16>;

        label = "MCP23017";
        status = "okay";
    };
};

/* Row GPIOs on the nice!nano v2 */
&gpio0 {
    status = "okay";
};

&gpio1 {
    status = "okay";
};

